<script>
    $(document).ready(function () {
        new TypeIt('#Typewriter', {
            speed: 350,
        })
            .type('Hello! Welcome')
            .pause(1500)
            .delete(8)
            .type(' &#2344;&#2350;&#2360;&#2381;&#2340;&#2375;');


        VanillaTilt.init(document.querySelector("#brand"), {
            max: 25,
            speed: 400,
        });

        AOS.init({
            duration: 1500,
        });

        $(".scrolldown").click(function () {
            var where = $(this).data('content');
            $('html,body').animate({
                scrollTop: $("#"+ where).offset().top
            }, 'slow');
        });

        $(document).scroll(function () {
            $('.navbar').css({
                background: $(this).scrollTop() > 250 ? "azure" : "transparent",
                opacity: $(this).scrollTop() > 250 ? ".86" : "1",
                transition: $(this).scrollTop() > 250 ? "2s" : "1s",
                height: $(this).scrollTop() > 250 ? "6%" : "7%",
             });
        });
    });    
</script>