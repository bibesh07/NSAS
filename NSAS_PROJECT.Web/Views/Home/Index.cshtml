<body>
    <!--Simple Modal for Login-->
    <div class="modal fade" id="loginmodal" tabindex="-1" role="dialog" aria-labelledby="loginmodal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title grow" id="exampleModalLabel">Log In</h5>
                    <hr />
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-md-12">
                        <div class="form-horizontal">
                            <div class="form-group col-md-12">
                                <label  class="control-label">Email</label>
                                <input  class="form-control" type="email" id="email" placeholder="Enter Email">
                                <span class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-12">
                                <label >Password</label>
                                <input  type="password" class="form-control" id="signuppassword" placeholder="Enter password">
                                <span  class="text-danger"></span>
                            </div>
                            <label>
                                <input id="RememberMe" name="RememberMe" type="checkbox" /> Remember me <br />
                            </label>
                            <p style="float:right;"><a href="Account/ForgotPassword">Forgot Password?</a></p><br />
                        </div>
                        <div class="col-md-12">
                            <input type="submit" value="Log In" class="btn btn-lg btn-primary btn-block" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="parallex" id="top" style="background-image: url('/images/pexels-photo-291732.jpeg');">
        <div style=" line-height:5">
            @for (int i = 0; i < 20; i++)
            {
            <div class="col-xs-12" style="height:10px;"></div>
